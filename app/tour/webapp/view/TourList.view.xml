<mvc:View
  controllerName="tour.controller.TourList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:layout="sap.ui.layout">
  <Page id="_IDGenPage1" title="{i18n>tourListTitle}">
    <content>
      <Toolbar id="_IDGenToolbar">
        <Button id="_IDGenButton" text="Create Tour" press="onCreateTour"/>
        <Button id="_IDGenButton1" text="Create Order" press="onCreateOrder"/>
      </Toolbar>
      <Table id="_IDGenTable" items="{/Tours}">
        <columns>
          <Column id="_IDGenColumn"><Text id="_IDGenText" text="Tour Name"/></Column>
          <Column id="_IDGenColumn1"><Text id="_IDGenText1" text="Description"/></Column>
          <Column id="_IDGenColumn2"><Text id="_IDGenText2" text="Price"/></Column>
          <Column id="_IDGenColumn3"><Text id="_IDGenText3" text="Status"/></Column>
        </columns>
        <items>
          <ColumnListItem id="_IDGenColumnListItem">
            <cells>
              <Text id="_IDGenText4" text="{TourName}"/>
              <Text id="_IDGenText5" text="{Description}"/>
              <Text id="_IDGenText6" text="{Price}"/>
              <Text id="_IDGenText7" text="{Status}"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
  </Page>
</mvc:View>