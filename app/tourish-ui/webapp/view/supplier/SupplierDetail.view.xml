<mvc:View
    controllerName="tourishui.controller.supplier.SupplierDetail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">

    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <Title id="_IDGenTitle" text="Global Parts Co." level="H2" />
                </f:heading>
                <f:expandedContent>
                    <Text id="_IDGenText1" text="ID: {supplierID}" />
                </f:expandedContent>
                <f:actions>
                    <Button id="_IDGenButton" text="Edit" type="Emphasized" press=".onEditSupplier" />
                    <Button id="_IDGenButton1" text="Delete" type="Negative" press=".onDeleteSupplier" />
                    <Button id="_IDGenButton2" icon="sap-icon://action" press=".onActionPress" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <IconTabBar id="idIconTabBar" class="sapUiResponsiveContentPadding" expandable="false">
                <items>
                    <IconTabFilter id="generalTab" text="General Information" key="general">
                        <VBox id="_IDGenVBox">
                            <Panel id="_IDGenPanel" headerText="Company Details" expandable="true" expanded="true" class="sapUiSmallMarginBottom">
                                <form:SimpleForm id="_IDGenSimpleForm2"
                                    editable="false"
                                    layout="ResponsiveGridLayout">
                                    <form:content>
                                        <Label id="_IDGenLabel" text="Founded Year" />
                                        <Text id="_IDGenText2" text="{foundedYear}" />
                                        <Label id="_IDGenLabel1" text="Website" />
                                        <Link id="_IDGenLink" text="{website}" href="{website}" target="_blank" />
                                        <Label id="_IDGenLabel2" text="Tax ID" />
                                        <Text id="_IDGenText3" text="{taxID}" />
                                        <Label id="_IDGenLabel3" text="Company Size" />
                                        <Text id="_IDGenText4" text="{companySize}" />
                                        <Label id="_IDGenLabel4" text="Industry" />
                                        <Text id="_IDGenText5" text="{industry}" />
                                    </form:content>
                                </form:SimpleForm>
                            </Panel>

                            <Panel id="_IDGenPanel1" headerText="Contact Person" expandable="true" expanded="true" class="sapUiSmallMarginBottom">
                                <form:SimpleForm id="_IDGenSimpleForm3"
                                    editable="false"
                                    layout="ResponsiveGridLayout">
                                    <form:content>
                                        <Label id="_IDGenLabel5" text="Name" />
                                        <Text id="_IDGenText6" text="{contactPerson/name}" />
                                        <Label id="_IDGenLabel6" text="Position" />
                                        <Text id="_IDGenText7" text="{contactPerson/position}" />
                                        <Label id="_IDGenLabel7" text="Phone" />
                                        <Text id="_IDGenText8" text="{contactPerson/phone}" />
                                        <Label id="_IDGenLabel8" text="Email" />
                                        <Link id="_IDGenLink1" text="{contactPerson/email}" href="mailto:{contactPerson/email}" />
                                    </form:content>
                                </form:SimpleForm>
                            </Panel>
                        </VBox>
                    </IconTabFilter>

                    <IconTabFilter id="servicesTab" text="Services" key="services" count="{= ${services}.length}">
                        <VBox id="_IDGenVBox1">
                            <OverflowToolbar id="_IDGenOverflowToolbar">
                                <Title id="_IDGenTitle1" text="Services Offered" level="H3" />
                                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                                <Button id="_IDGenButton3" 
                                    icon="sap-icon://add"
                                    tooltip="Add New Service"
                                    press=".onAddService" />
                                <Button id="_IDGenButton4"
                                    icon="sap-icon://excel-attachment"
                                    tooltip="Export to Excel"
                                    press=".onExportServices" />
                            </OverflowToolbar>

                            <Table
                                id="servicesTable"
                                inset="false"
                                items="{
                                    path: 'services',
                                    sorter: {
                                        path: 'serviceName',
                                        descending: false
                                    }
                                }"
                                growing="true"
                                growingThreshold="10"
                                alternateRowColors="true">

                                <columns>
                                    <Column id="_IDGenColumn">
                                        <Text id="_IDGenText9" text="Service Name" />
                                    </Column>
                                    <Column id="_IDGenColumn1" minScreenWidth="Tablet" demandPopin="true">
                                        <Text id="_IDGenText10" text="Service Type" />
                                    </Column>
                                    <Column id="_IDGenColumn2" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                                        <Text id="_IDGenText11" text="Number of Guests" />
                                    </Column>
                                    <Column id="_IDGenColumn3" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                                        <Text id="_IDGenText12" text="Price" />
                                    </Column>
                                    <Column id="_IDGenColumn4" minScreenWidth="Desktop" demandPopin="true">
                                        <Text id="_IDGenText13" text="Description" />
                                    </Column>
                                    <Column id="_IDGenColumn5" width="6rem" hAlign="End">
                                        <Text id="_IDGenText14" text="Actions" />
                                    </Column>
                                </columns>

                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem" type="Detail">
                                        <cells>
                                            <ObjectIdentifier id="_IDGenObjectIdentifier" title="{serviceName}" />
                                            <Text id="_IDGenText15" text="{serviceType}" />
                                            <Text id="_IDGenText16" text="{guests}" />
                                            <ObjectNumber id="_IDGenObjectNumber" 
                                                number="{price}" 
                                                unit="USD" />
                                            <Text id="_IDGenText17" text="{description}" />
                                            <HBox id="_IDGenHBox">
                                                <Button id="_IDGenButton5" icon="sap-icon://edit" press=".onEditService" tooltip="Edit" />
                                                <Button id="_IDGenButton6" icon="sap-icon://delete" press=".onDeleteService" tooltip="Delete" class="sapUiTinyMarginBegin" />
                                            </HBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </IconTabFilter>

                    <IconTabFilter id="historyTab" text="History" key="history">
                        <VBox id="_IDGenVBox2">
                            
                        </VBox>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>

        <f:footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button id="_IDGenButton7" type="Emphasized" text="Save" visible="false" />
                <Button id="_IDGenButton8" text="Cancel" visible="false" />
                <Button id="_IDGenButton9" text="Close" press=".onNavBack" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>