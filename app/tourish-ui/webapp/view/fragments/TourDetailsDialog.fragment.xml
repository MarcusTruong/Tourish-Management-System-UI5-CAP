<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
    <Dialog id="tourDetailsDialog" contentWidth="800px" contentHeight="600px" resizable="true" draggable="true">
        <customHeader>
            <Toolbar id="_IDGenToolbar1">
                <Title id="tourDetailsDialogTitle" text="Tour Details"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
            </Toolbar>
        </customHeader>

        <content>
            <IconTabBar id="detailsTabBar" class="sapUiResponsiveContentPadding" expandable="false">
                <items>
                    <!-- Basic Info Tab -->
                    <IconTabFilter id="basicInfoTab" icon="sap-icon://hint" key="basicInfo" text="Basic Info">
                        <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                            <f:SimpleForm id="_IDGenSimpleForm1" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false">
                                <f:content>
                                    <Label id="_IDGenLabel1" text="Tour Name"/>
                                    <Text id="_IDGenText1" text="{details>/tour/TourName}"/>

                                    <Label id="_IDGenLabel2" text="Template"/>
                                    <Text id="_IDGenText2" text="{details>/template/TemplateName}"/>

                                    <Label id="_IDGenLabel3" text="Tour Type"/>
                                    <Text id="_IDGenText3" text="{details>/template/TourType}"/>

                                    <Label id="_IDGenLabel4" text="Duration"/>
                                    <Text id="_IDGenText4" text="{= ${details>/template/NumberDays} + ' days / ' + ${details>/template/NumberNights} + ' nights'}"/>

                                    <Label id="_IDGenLabel5" text="Departure Date"/>
                                    <Text id="_IDGenText5" text="{path: 'details>/tour/DepartureDate', formatter: '.formatDate'}"/>

                                    <Label id="_IDGenLabel6" text="Return Date"/>
                                    <Text id="_IDGenText6" text="{path: 'details>/tour/ReturnDate', formatter: '.formatDate'}"/>

                                    <Label id="_IDGenLabel7" text="Sale Period"/>
                                    <Text id="_IDGenText7" text="{path: 'details>/tour/SaleStartDate', formatter: '.formatDate'} - {path: 'details>/tour/SaleEndDate', formatter: '.formatDate'}"/>

                                    <Label id="_IDGenLabel8" text="Capacity"/>
                                    <Text id="_IDGenText8" text="{details>/tour/CurrentBookings} / {details>/tour/MaxCapacity}"/>

                                    <Label id="_IDGenLabel9" text="Status"/>
                                    <ObjectStatus id="_IDGenObjectStatus1" text="{details>/tour/Status}" state="{= ${details>/tour/Status} === 'Open' ? 'Success' : ${details>/tour/Status} === 'Ongoing' ? 'Warning' : ${details>/tour/Status} === 'Completed' ? 'Information' : 'Error'}"/>

                                    <Label id="_IDGenLabel10" text="Responsible Person"/>
                                    <Text id="_IDGenText9" text="{details>/tour/ResponsiblePersonName}"/>
                                </f:content>
                            </f:SimpleForm>
                        </VBox>
                    </IconTabFilter>

                    <!-- Schedule Tab -->
                    <IconTabFilter id="scheduleTab" icon="sap-icon://calendar" key="schedule" text="Schedule">
                        <VBox id="_IDGenVBox2" class="sapUiSmallMargin">
                            <List id="scheduleList" items="{details>/schedules}" noDataText="No schedule available" class="sapUiResponsiveMargin">
                                <CustomListItem id="_IDGenCustomListItem1" class="sapUiSmallMarginBottom">
                                    <Panel id="_IDGenPanel1" expandable="true" expanded="false" headerText="Day {details>DayNumber}: {details>DayTitle}">
                                        <VBox id="_IDGenVBox3" class="sapUiSmallMargin">
                                            <Text id="_IDGenText10" text="{details>Overview}" class="sapUiSmallMarginBottom"/>

                                            <HBox id="_IDGenHBox1" class="sapUiSmallMarginBottom">
                                                <ObjectStatus id="_IDGenObjectStatus2" title="Breakfast" text="{= ${details>BreakfastIncluded} ? 'Included' : 'Not Included'}" state="{= ${details>BreakfastIncluded} ? 'Success' : 'None'}" class="sapUiSmallMarginEnd"/>
                                                <ObjectStatus id="_IDGenObjectStatus3" title="Lunch" text="{= ${details>LunchIncluded} ? 'Included' : 'Not Included'}" state="{= ${details>LunchIncluded} ? 'Success' : 'None'}" class="sapUiSmallMarginEnd"/>
                                                <ObjectStatus id="_IDGenObjectStatus4" title="Dinner" text="{= ${details>DinnerIncluded} ? 'Included' : 'Not Included'}" state="{= ${details>DinnerIncluded} ? 'Success' : 'None'}"/>
                                            </HBox>

                                            <Title id="_IDGenTitle1" text="Activities" level="H4" class="sapUiTinyMarginTop sapUiSmallMarginBottom"/>

                                            <List id="activitiesList" items="{details>Activities}" noDataText="No activities" showSeparators="Inner">
                                                <DisplayListItem id="_IDGenDisplayListItem1" label="{details>StartTime} - {details>EndTime}" value="{details>Title}" press=".onActivityPress" type="Active"/>
                                            </List>
                                        </VBox>
                                    </Panel>
                                </CustomListItem>
                            </List>
                        </VBox>
                    </IconTabFilter>

                    <!-- Terms Tab -->
                    <IconTabFilter id="termsTab" icon="sap-icon://document-text" key="terms" text="Terms & Conditions">
                        <VBox id="_IDGenVBox4" class="sapUiSmallMargin">
                            <Panel id="_IDGenPanel2" headerText="Services Included" class="sapUiSmallMarginBottom">
                                <Text id="_IDGenText11" text="{details>/terms/ServicesIncluded}"/>
                            </Panel>

                            <Panel id="_IDGenPanel3" headerText="Services Not Included" class="sapUiSmallMarginBottom">
                                <Text id="_IDGenText12" text="{details>/terms/ServicesNotIncluded}"/>
                            </Panel>

                            <Panel id="_IDGenPanel4" headerText="Cancellation Terms" class="sapUiSmallMarginBottom">
                                <Text id="_IDGenText13" text="{details>/terms/CancellationTerms}"/>
                            </Panel>

                            <Panel id="_IDGenPanel5" headerText="General Terms and Conditions">
                                <Text id="_IDGenText14" text="{details>/terms/GeneralTerms}"/>
                            </Panel>
                        </VBox>
                    </IconTabFilter>

                    <!-- Finance Tab -->
                    <IconTabFilter id="financeTab" icon="sap-icon://money-bills" key="finance" text="Finance">
                        <VBox id="_IDGenVBox5" class="sapUiSmallMargin">
                            <Panel id="_IDGenPanel6" headerText="Financial Summary" class="sapUiSmallMarginBottom">
                                <f:SimpleForm id="_IDGenSimpleForm2" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                                    <f:content>
                                        <Label id="_IDGenLabel11" text="Estimated Cost"/>
                                        <ObjectNumber id="_IDGenObjectNumber1" number="{details>/estimate/EstimatedCost}" unit="USD"/>

                                        <Label id="_IDGenLabel12" text="Estimated Revenue"/>
                                        <ObjectNumber id="_IDGenObjectNumber2" number="{details>/estimate/EstimatedRevenue}" unit="USD"/>

                                        <Label id="_IDGenLabel13" text="Estimated Profit"/>
                                        <ObjectNumber id="_IDGenObjectNumber3" number="{details>/estimate/EstimatedProfit}" unit="USD" state="{= ${details>/estimate/EstimatedProfit} > 0 ? 'Success' : 'Error'}"/>
                                    </f:content>
                                </f:SimpleForm>
                            </Panel>
                        </VBox>
                    </IconTabFilter>

                    <!-- History Tab -->
                    <IconTabFilter id="historyTab" icon="sap-icon://history" key="history" text="History">
                        <VBox id="_IDGenVBox6" class="sapUiSmallMargin">
                            <Table id="historyTable" items="{details>/history}" noDataText="No history available" growing="true" growingThreshold="10" growingScrollToLoad="true">
                                <columns>
                                    <Column id="_IDGenColumn1" width="25%">
                                        <Text id="_IDGenText15" text="Date"/>
                                    </Column>
                                    <Column id="_IDGenColumn2" width="25%">
                                        <Text id="_IDGenText16" text="Modified By"/>
                                    </Column>
                                    <Column id="_IDGenColumn3" width="50%">
                                        <Text id="_IDGenText17" text="Changes"/>
                                    </Column>
                                </columns>

                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem2">
                                        <cells>
                                            <Text id="_IDGenText18" text="{path: 'details>ModifiedDate', formatter: '.formatDate'}"/>
                                            <Text id="_IDGenText19" text="{details>ModifiedBy}"/>
                                            <Text id="_IDGenText20" text="{details>Changes}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>

        <beginButton>
            <Button id="closeDetailsButton" text="Close" press=".onCloseTourDetailsDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
