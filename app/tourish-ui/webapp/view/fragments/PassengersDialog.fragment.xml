<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        id="passengersDialog"
        contentWidth="800px"
        contentHeight="600px"
        resizable="true"
        draggable="true">
        
        <customHeader>
            <Toolbar id="_IDGenToolbar1">
                <Title id="passengersDialogTitle" text="Passengers" />
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
            </Toolbar>
        </customHeader>
        
        <content>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <HBox id="_IDGenHBox1" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                    <Title id="_IDGenTitle1" text="Passenger List" level="H2" />
                    <Button id="addPassengerButton" 
                        text="Add Passenger" 
                        icon="sap-icon://add" 
                        press=".onAddPassenger" />
                </HBox>
                
                <Table id="passengersTable"
                    items="{passengers>/passengers}"
                    noDataText="No passengers found"
                    growing="true"
                    growingThreshold="10"
                    growingScrollToLoad="true">
                    <columns>
                        <Column id="_IDGenColumn1" width="20%">
                            <Text id="_IDGenText1" text="Name" />
                        </Column>
                        <Column id="_IDGenColumn2" width="10%">
                            <Text id="_IDGenText2" text="Gender" />
                        </Column>
                        <Column id="_IDGenColumn3" width="15%">
                            <Text id="_IDGenText3" text="Birth Date" />
                        </Column>
                        <Column id="_IDGenColumn4" width="15%">
                            <Text id="_IDGenText4" text="ID Number" />
                        </Column>
                        <Column id="_IDGenColumn5" width="15%">
                            <Text id="_IDGenText5" text="Phone" />
                        </Column>
                        <Column id="_IDGenColumn6" width="15%">
                            <Text id="_IDGenText6" text="Email" />
                        </Column>
                        <Column id="_IDGenColumn7" width="10%" hAlign="End">
                            <Text id="_IDGenText7" text="Actions" />
                        </Column>
                    </columns>
                    
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Text id="_IDGenText8" text="{passengers>FullName}" />
                                <Text id="_IDGenText9" text="{passengers>Gender}" />
                                <Text id="_IDGenText10" text="{path: 'passengers>BirthDate', formatter: '.formatDate'}" />
                                <Text id="_IDGenText11" text="{passengers>IDNumber}" />
                                <Text id="_IDGenText12" text="{passengers>Phone}" />
                                <Text id="_IDGenText13" text="{passengers>Email}" />
                                <HBox id="_IDGenHBox2" justifyContent="End">
                                    <Button id="editPassengerButton" 
                                        icon="sap-icon://edit" 
                                        tooltip="Edit Passenger" 
                                        press=".onEditPassenger" />
                                    <Button id="removePassengerButton" 
                                        icon="sap-icon://delete" 
                                        tooltip="Remove Passenger" 
                                        press=".onRemovePassenger" 
                                        class="sapUiTinyMarginBegin" />
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        
        <beginButton>
            <Button id="closePassengersButton" text="Close" press=".onClosePassengersDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>