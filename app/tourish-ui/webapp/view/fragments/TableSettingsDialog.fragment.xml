<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <ViewSettingsDialog
        id="tableSettingsDialog"
        confirm=".onConfirmTableSettings"
        cancel=".onCancelTableSettings">
        <sortItems>
            <ViewSettingsItem id="sortId" key="ID" text="ID" />
            <ViewSettingsItem id="sortName" key="ServiceName" text="Service Name" />
            <ViewSettingsItem id="sortType" key="ServiceType" text="Service Type" />
            <ViewSettingsItem id="sortSupplier" key="SupplierName" text="Supplier" />
            <ViewSettingsItem id="sortPrice" key="Price" text="Price" />
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>