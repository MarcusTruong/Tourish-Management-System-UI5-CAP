<mvc:View
    controllerName="tourishui.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage2"
        title="Đăng ký"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <Label
                    id="_IDGenLabel3"
                    text="Tên người dùng"
                    labelFor="usernameInput"
                />
                <Input
                    id="usernameInput2"
                    placeholder="Nhập tên người dùng"
                />
                <Label
                    id="_IDGenLabel4"
                    text="Mật khẩu"
                    labelFor="passwordInput"
                />
                <Input
                    id="passwordInput2"
                    type="Password"
                    placeholder="Nhập mật khẩu"
                    liveChange="onPasswordLiveChange"
                    valueLiveUpdate="true"
                />
                <VBox
                    id="passwordRequirements"
                    class="sapUiTinyMarginTop"
                >
                <!-- js -->
                </VBox>
                <Label
                    id="_IDGenLabel5"
                    text="Họ và tên"
                    labelFor="fullNameInput"
                />
                <Input
                    id="fullNameInput"
                    placeholder="Nhập họ và tên"
                />
                <Label
                    id="_IDGenLabel6"
                    text="Email"
                    labelFor="emailInput"
                />
                <Input
                    id="emailInput"
                    placeholder="Nhập email"
                />
                <Label
                    id="_IDGenLabel7"
                    text="Số điện thoại"
                    labelFor="phoneInput"
                />
                <Input
                    id="phoneInput"
                    placeholder="Nhập số điện thoại"
                />
                <Button
                    id="_IDGenButton1"
                    text="Đăng ký"
                    press="onRegisterPress"
                    type="Emphasized"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
