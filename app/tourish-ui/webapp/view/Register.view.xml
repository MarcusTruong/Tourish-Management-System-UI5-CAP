<mvc:View
    controllerName="tourishui.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
>
    <Page
        id="_IDGenPage2"
        title="Register Page"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <l:Grid id="_IDGenGrid1"
                defaultSpan="XL12 L12 M12 S12"
                class="sapUiMediumMargin"
            >
                <l:content>
                    <FlexBox id="_IDGenFlexBox"
                        alignItems="Center"
                        justifyContent="Center"
                        alignContent="Center"
                        wrap="Wrap"
                    >
                        <items>
                            <VBox id="_IDGenVBox2" width="40%" class="sapUiMediumMarginBegin">
                                <form:SimpleForm
                                    id="registerForm"
                                    editable="true"
                                    layout="ResponsiveGridLayout"
                                    labelSpanXL="4"
                                    labelSpanL="4"
                                    labelSpanM="4"
                                    labelSpanS="12"
                                    adjustLabelSpan="false"
                                    emptySpanXL="0"
                                    emptySpanL="0"
                                    emptySpanM="0"
                                    emptySpanS="0"
                                    columnsXL="1"
                                    columnsL="1"
                                    columnsM="1"
                                    xmlns:form="sap.ui.layout.form"
                                >
                                    <form:content>
                                        <Label id="_IDGenLabel2" text="User Name" required="true" />
                                        <Input id="usernameInput2" placeholder="Enter your username" />
                                        
                                        <Label id="_IDGenLabel3" text="Password" required="true" />
                                        <VBox id="_IDGenVBox4" >
                                        <Input
                                            id="passwordInput2"
                                            type="Password"
                                            placeholder="Enter your password"
                                            liveChange="onPasswordLiveChange"
                                            valueLiveUpdate="true"
                                        />
                                        <VBox id="passwordRequirements">
                                            <!-- js -->
                                        </VBox>
                                        </VBox>
                                        
                                        <Label id="_IDGenLabel4" text="Full name" required="true" />
                                        <Input id="fullNameInput" placeholder="Enter your full name" />
                                        
                                        <Label id="_IDGenLabel5" text="Email" required="true" />
                                        <Input id="emailInput" placeholder="Enter your email" />
                                        
                                        <Label id="_IDGenLabel6" text="Phone number" />
                                        <Input id="phoneInput" placeholder="Enter your phone number" />
                                    </form:content>
                                </form:SimpleForm>
                                
                                <Button
                                    id="_IDGenButton1"
                                    text="Register"
                                    press="onRegisterPress"
                                    type="Emphasized"
                                    width="100%"
                                    class="sapUiSmallMarginnTop" 
                                />
                            </VBox>

                            <VBox id="_IDGenVBox1" width="40%" class="sapUiMediumMarginBegin" alignItems="Center">
                                <Image id="_IDGenImage" 
                                    src="https://www.neovasolutions.com/wp-content/uploads/2021/05/Travel-management-system-min.png" 
                                    width="100%"
                                    height="auto"
                                    class="sapUiMediumMarginBottom" />
                                <Text id="_IDGenText1" text="Register to join our" class="sapMTitleStyleH2" textAlign="Center"/>
                                <Text id="_IDGenText2" text="Tourish Management System!" class="sapUiMediumMarginBottom sapMTitleStyleH2" textAlign="Center"/>
                            </VBox>
                            
                            
                        </items>
                    </FlexBox>
                </l:content>
            </l:Grid>
        </content>
    </Page>
</mvc:View>